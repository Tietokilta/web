{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true,
    "types": ["@testing-library/jest-dom"],
    "composite": true
  },
  "exclude": ["node_modules", "dist", "storybook-static"],
  "extends": "../../tsconfig.json"
}
