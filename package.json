{
  "scripts": {
    "dev": "pnpm run -r --reporter append-only --parallel dev",
    "format": "prettier --write .",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --max-warnings 0 .",
    "lint:fix": "pnpm run lint --fix",
    "mongo:clear": "docker compose down -v",
    "mongo:start": "docker compose up -d",
    "mongo:stop": "docker compose down",
    "prettier": "prettier --check .",
    "seeding:generate": "./packages/cms/scripts/generate_seeding_data.sh",
    "seeding:populate": "pnpm mongo:start && ./packages/cms/scripts/import_seeding_data.sh"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.5.1",
    "@tsconfig/strictest": "^2.0.2",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1",
    "prettier-plugin-packagejson": "^2.4.9",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "typescript": "^5.3.3"
  }
}
